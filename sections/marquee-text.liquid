{% comment %}
  marquee-text.liquid
{% endcomment %}

<div class="marquee-container">
  <div class="marquee-content">
    <p>{{ section.settings.marquee_text }}</p>
  </div>
  <div class="marquee-content">
    <p>{{ section.settings.marquee_text }}</p>
  </div>
  <div class="marquee-content">
    <p>{{ section.settings.marquee_text }}</p>
  </div>
  <div class="marquee-content">
    <p>{{ section.settings.marquee_text }}</p>
  </div>
</div>

<style>
  .marquee-container {
    overflow: hidden;
    white-space: nowrap;
    width: 100%;
    border-top: 2px solid {{ section.settings.marquee_border_color }};
    border-bottom: 2px solid {{ section.settings.marquee_border_color }};
    background-color: {{ section.settings.marquee_background_color }};
    color: {{ section.settings.marquee_text_color }};
    padding: 10px 0;
    box-sizing: border-box;
  }

  .marquee-content {
    text-transform: uppercase;
    font-weight: bold;
    display: inline-block;
    padding-right: 25%; /* Spacing for seamless loop */
    animation: scroll-marquee 10s linear infinite;
  }

  .marquee-content p {
    padding: 0;
    margin: 0;
  }

  @keyframes scroll-marquee {
    from {
      transform: translateX(100%);
    }
    to {
      transform: translateX(-100%);
    }
  }
</style>

{% schema %}
{
  "name": "Marquee Text",
  "settings": [
    {
      "type": "text",
      "id": "marquee_text",
      "label": "Marquee Text",
      "default": "Welcome to our site!"
    },
    {
      "type": "color",
      "id": "marquee_background_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "marquee_text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "marquee_border_color",
      "label": "Border Color"
    }
  ],
  "presets": [
    {
      "name": "Marquee",
      "category": "Custom"
    }
  ]
}
{% endschema %}
